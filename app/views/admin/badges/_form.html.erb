<div class="card border-primary">
  <div class="card-body">
    <%= form_with model: [:admin, @badge], local: true do |form| %>

      <%= render 'shared/errors', resource: @badge %>

      <div class="form-group">
        <p class="form-field is-required">
          <%= form.label :name %>
          <%= form.text_area :name, id: :test_title, class: 'form-control' %>
        </p><br>

        <p class="form-field is-required">
          <%= form.label :image_url %>
          <%= form.select :rule_type, Badge::BADGE_IMG.map { |type| [type ,type] } %>
        </p>
       

        <p class="form-field is-required">
          <%= form.label :rule_type %>
          <%= form.select :rule_type, Badge::BADGE_TYPES.map { |type| [type, type] } %>
        </p><br>

        <p class="alert alert-primary">
          <b>Rule_Type:</b><br>
          <% %w[category level first_try].each do |title| %>
            <%= title %><br>
          <% end %>
        </p><br>

        <p>
          <%= form.label :rule_option %>
          <%= form.text_field :rule_option, id: :rule_option, class: 'form-control' %>
        </p><br>

        <p class="alert alert-primary">
          <b>Level:</b> 1 - 100
          <br><br>
          <b>Category:</b>
          <br>
          <% Category.pluck(:id, :title).each do |id, title| %>
            <%= title %>: [ <%= id %> ] <br>
          <% end %>
        </p><br>

        <p><%= form.submit class: "btn btn-outline-primary" %></p>
      </div>
    <% end %>
  </div>
</div> 
